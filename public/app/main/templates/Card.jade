.mtgcard(ng-if="card.loading && !card.empty")
    img.cardImg(src="./../../images/loading.png")
.mtgcard(ng-if="card.empty && !card.loading")
    img.cardImg(src="./../../images/invisCard.png")
.mtgcard(ng-if="!card.empty && !card.loading && card.rarity != 'Basic Land'",dnd-draggable="card", dnd-dragstart="dragStart()", dnd-dragend="dragEnd()", dnd-effect-allowed="copy", dnd-disable-if="card.cardsLeft <= 0", dnd-copied="card.count = card.count + 1", ng-dblclick="addCard(card)")
    img.cardImg(preload-image ng-src="http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid={{card.multiverseid}}&type=card" default-image="./../../images/cardback.jpg")
    .pricing-box
        .pricing
            .vendor Reg
            .price $100.00
        .pricing
            .vendor Foil
            .price $100.00
.mtgcard(ng-if="card.rarity == 'Basic Land'",dnd-draggable="card", dnd-dragstart="dragStart()", dnd-dragend="dragEnd()", dnd-effect-allowed="copy", dnd-copied="card.count = card.count + 1", ng-dblclick="addCard(card)")
    img.cardImg(preload-image ng-src="http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid={{card.multiverseid}}&type=card" default-image="./../../images/cardback.jpg")
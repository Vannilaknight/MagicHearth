.deck-builder-body
    .deck-builder
        .collection-box
            .top-filter
                include templates/ColorFilter
                include templates/TextFilter
            .card-view
                include templates/CardView
            .bot-filter
                include templates/FormatSetFilter
                include templates/RarityFilter
                include templates/CMCFilter
        .deck-tray(ng-repeat="(zone, list) in models.dropzones")
            .deck-boxes
                .total-cards
                    | Total Cards: {{totalDisplayCards}}
                    button.clearall-btn.btn.btn-primary(ng-click="clearDeck()") Clear all
                ul#display-box.display-box
                    div
                        li.deck-card.display-card-border(ng-repeat='displayCard in displayDeck', ng-class="getBorder(displayCard.manaCost)")
                            .card-content(ng-mouseenter="showHover(displayCard.multiverseid)", ng-mouseleave="hideHover()")
                                .add-remove-control
                                    button.remove(ng-click="removeCard(displayCard)") -
                                    button.add(ng-click="addCard(displayCard)", ng-disabled="displayCard.count >= 4 && displayCard.supertypes[0] != 'Basic'", ng-class="{'disabled-add-btn': displayCard.count >= 4 && displayCard.supertypes[0] != 'Basic'}") +
                                .card-data
                                    span.text {{displayCard.name}}
                                    .mana-cost
                                        div(ng-if="displayCard.types[0] == 'Land'")
                                            span.icon Land
                                        div(ng-if="displayCard.types[0] != 'Land'")
                                            span.icon.icon-cmc-0(ng-if="getManaCost(displayCard).length < 1")
                                            span.icon(ng-if="getManaCost(displayCard).length > 0", ng-repeat="cost in getManaCost(displayCard) track by $index", ng-class="getIcon(cost)")
                                .card-count
                                    span.count {{displayCard.count}}
                ul#drag-box.drag-box(dnd-list='list')
                    .export-import
                        button.btn.btn-primary.export-btn(data-toggle="modal", data-target="#exportModal", ng-click="exportDeck()") Export
                        button.btn.btn-primary.import-btn(data-toggle="modal", data-target="#importModal") Import
    img.zoom-view(ng-src="http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid={{hoverId}}&type=card", ng-show="isHover")

include Modals/Export
include Modals/Import
